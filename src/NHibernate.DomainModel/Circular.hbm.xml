<?xml version="1.0"?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.0" default-cascade="save-update" default-lazy="false">

    <class 
		name="NHibernate.DomainModel.Circular, NHibernate.DomainModel" 
		dynamic-update="true"
	>
        <id 
			name="Id" 
			column="id_" 
			length="64" 
			unsaved-value="null"
		>
            <generator class="uuid.hex"/>
        </id>
        <property name="Clazz"/>
        <many-to-one name="Other"/>
        
        <property name="AnyEntity">
        	<column name="classname"/>
        	<column name="any_id"/>
        </property>
        
    </class>

</hibernate-mapping>