<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
					 namespace="NHibernate.Test.NHSpecificTest.CollectionPerf"
					 assembly="NHibernate.Test">
	<class name="Parent">
    <id name="Id" type="guid">
      <generator class="guid.comb" />
    </id>
		<list name="Children" cascade="all-delete-orphan" inverse="true">
			<key column="Parent" not-null="true"/>
      <list-index column="OrderIndex"  />
			<one-to-many class="Child"/>
		</list>
    <property name="Name" />
	</class>


	<class name="Child">
    <id name="Id" type="guid">
      <generator class="guid.comb" />
    </id>
    <many-to-one name="Parent" class="Parent" />
    <property name="OrderIndex" access="readonly"/>
    <property name="Name" />	
  </class>
</hibernate-mapping>
