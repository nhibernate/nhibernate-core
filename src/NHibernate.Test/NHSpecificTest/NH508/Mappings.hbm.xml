				class="User" 
				column="FK_RELATED_USER"/>
		</set>

		<set name="FriendOfList" table="SEC_USER_RELATION_TBL" lazy="true" cascade="save-update" inverse="true">
			<key column="FK_RELATED_USER"/>
			<many-to-many 
				class="User" 
				column="FK_USER"/>
		</set>
